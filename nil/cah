    <% } %>


    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script>
        function incrementQuantity(button) {
            const input = button.previousElementSibling;
            input.value = parseInt(input.value) + 1;
        }

        function decrementQuantity(button) {
            const input = button.nextElementSibling;
            if (parseInt(input.value) > 1) {
                input.value = parseInt(input.value) - 1;
            }
        }
    </script>
</body>
</html>

router.get("/addtocard/:productid", isLogged, async function(req, res) {
    try {
        // Fetch the user by email
        let user = await userModel.findOne({ email: req.user.email });

        // If no user found, send an error
        if (!user) {
            return res.status(401).send("Invalid email or password");
        }

        // Fetch the product details using the productId from params
        let product = await productModel.findById(req.params.productid);

        // If no product found, send an error
        if (!product) {
            return res.status(404).send("Product not found");
        }

        // Create a filtered version of the product to store in the cart
        // This can include specific fields like 'name', 'price', 'image' etc.
        const filteredProduct = {
            productId: product._id,
            name: product.name,
            price: product.price,
            image: product.image,  // Add more fields as needed
            quantity: 1  // Default to quantity 1 or customize logic here
        };

        // Check if the product is already in the cart
        const productIndex = user.cart.findIndex(item => item.productId.toString() === req.params.productid);

        if (productIndex === -1) {
            // If not in the cart, add the product
            user.cart.push(filteredProduct);
        } else {
            // If product is already in cart, you can increase the quantity or handle as needed
            user.cart[productIndex].quantity += 1;
        }

        // Save the updated user data
        await user.save();

        // Redirect to the shop page with a success message
        res.redirect("/shop");
        alert("Product added to cart successfully");

    } catch (error) {
        console.error(error);
        res.status(500).send("An error occurred while adding the product to the cart");
    }
});




