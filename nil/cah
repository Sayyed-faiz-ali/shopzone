                            <h1 class="text-xl">Quantity</h1>
                            <form action="/cart/update/<%= item._id %>" method="post">
                                <button type="button" class="m" onclick="decrementQuantity(this)">−</button>
                                <input class="w-8 ml-2 rounded-md" type="number" name="quantity" value="1" min="1"> 
                                <button type="button" class="" onclick="incrementQuantity(this)">+</button>
                            </form>
                        </div>

                        <div class="border-2 mt-2 border-zinc-900"></div>
                        <div class="flex flex-col md:flex-row justify-between mx-10 mt-3">
                            <h2 class="text-xl">Total Amount</h2>
                            <p class="text-xl text-green-800">&#8377;<%= (Number(item.price) - Number(item.discount) + 20).toFixed(2) %></p>
                            <form action="/cart/buy/<%= item._id %>" method="post">
                                <input type="hidden" name="quantity" value="1"> 
                                <button class="bg-yellow-300 shadow-md w-16 text-white rounded-md">Buy</button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            </div>

