            <div class="container mx-auto p-6">

        <h1 class="text-3xl font-semibold text-center mb-6">List of Users</h1>
        
        <% if (user && user.length > 0) { %>
            <div class="overflow-x-auto">
                <table class="min-w-full table-auto bg-white shadow-lg rounded-lg">
                    <thead class="bg-gray-800 text-white">
                        <tr>
                            <!-- <th class="px-6 py-3 text-left text-sm font-medium">ID</th> -->
                            <th class="px-6 py-3 text-left text-sm font-medium">Name</th>
                            <th class="px-6 py-3 text-left text-sm font-medium">Email</th>
                            <th class="px-6 py-3 text-left text-sm font-medium">product add to cart</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% user.forEach(function(u) { %>
                            <tr class="border-b hover:bg-gray-100">
                                <!-- <td class="px-6 py-4 text-sm text-gray-800"><%= u._id %></td> -->
                                <td class="px-6 py-4 text-sm text-gray-800"><%= u.fullname %></td>
                                <td class="px-6 py-4 text-sm text-gray-800"><%= u.email %></td>
                                <td class="px-6 py-4 text-sm text-gray-800"><%= u.cart.length %></td>

                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <p class="text-center text-lg text-gray-600">No users found.</p>
        <% } %>

    </div>




    <h1 class="text-3xl font-semibold text-center mb-6">List of address</h1>
    <div class="flex flex-wrap items-center mt-6 space-y-4">
        <% add.forEach(function(i) { %>
            <div class="max-w-md mx-auto p-6 bg-white rounded-lg shadow-lg border border-gray-300">
                <h1 class="text-center text-green-600 text-xl font-semibold bg-gradient-to-r from-green-200 via-green-300 to-green-500 py-2 rounded-lg">Successfully Done</h1>
                <div class="mt-4">
                    <p class="font-medium text-gray-700">Name: <span class="text-gray-900"><%= i.fullname %></span></p>
                    <p class="font-medium text-gray-700">Email: <span class="text-gray-900"><%= i.email %></span></p>
                    <p class="font-medium text-gray-700">Number: <span class="text-gray-900"><%= i.contactno %></span></p>
                    <p class="font-medium text-gray-700">Address: <span class="text-gray-900"><%= i.address %></span></p>
                    <p class="font-medium text-gray-700">Location: <span class="text-gray-900"><%= i.location %></span></p>
                </div>
                <hr class="my-4 border-gray-300">
            </div>
        <% }) %>
    </div>
    <script>
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        const navLinks = document.getElementById('nav-links');
        const productListDropdown = document.querySelector('.relative > button');
        const dropdownMenu = document.querySelector('.relative > div');

        mobileMenuButton.addEventListener('click', function () {
            mobileMenu.classList.toggle('hidden');
        });

        productListDropdown.addEventListener('click', function () {
            dropdownMenu.classList.toggle('hidden');
        });
